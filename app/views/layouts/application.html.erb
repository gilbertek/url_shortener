    <nav>
      <ul class="nav nav-pills pull-right">
        <li role="presentation" class="active"><a href="/">Home</a></li>
      </ul>
    </nav>
    <h3 class="text-muted">Url Shortener</h3>
  </div>

  <div class="row-fluid marketing">
    <%= yield %>
  </div>

  <footer class="footer">
    <p>&copy; Url Shortener 2015</p>
  </footer>

</div><!-- /container -->

</body>
</html>
